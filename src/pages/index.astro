---
import Layout from '../layouts/Layout.astro';
import Snowflake from '../components/Snowflake.svelte';
import TypeWritter from '../components/TypeWritter.svelte';
import Projects from '../components/Projects.svelte';
import Curriculum from '../BrunoBento_CV.pdf';

const texts = ["Desenvolvedor Full Stack", "UI/UX Designer"	];

---


<Layout >
	<Snowflake/>
	<div class="flex min-h-screen items-center justify-center mb-20">
		<div class="w-max">
			 <TypeWritter texts={texts} client:load/>
		</div>
	</div>
	<div class="flex flex-col gap-8 items-center justify-center h-1/4 mb-20">
		<h2 class="sm:text-5xl text-4xl font-bold text-white">
			Currículo
		</h2>
		<div class="relative group">
			<div class="absolute -inset-0.5 bg-gradient-to-r from-primary-yellow to-secondary-yellow rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
			<button class="relative px-7 py-4 bg-[#131E3C] rounded-lg leading-none flex items-center divide-x divide-gray-600">
			  <span class="flex items-center space-x-5">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-yellow">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
				  </svg>
				  
				<a href={Curriculum} download="BrunoBento_CV" target='_blank' class="pr-6 text-white font-bold text-xl ">
					Currículo
				</a>
			  </span>
			</button>
		  </div>

	</div>

	<div class="flex flex-col gap-8 min-h-screen items-center justify-start ">
		<h2 class="sm:text-5xl text-4xl font-bold text-white">
			Projetos
		</h2>
		<Projects client:load/>
	</div>
</Layout>
